{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "strict": true,
    "jsx": "react",
    "lib": ["esnext"],
    "skipLibCheck": true
  },
  "include": [
    "./**/*", 
    "@env.d.ts" 
  ],
  "exclude": [
    "node_modules",
    "node_modules/expo/node_modules"
  ]
}
